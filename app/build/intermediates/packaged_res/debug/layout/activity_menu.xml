<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:fadingEdgeLength="@dimen/cardview_default_radius"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/buttonPro"
        android:layout_width="132dp"
        android:layout_height="149dp"
        android:layout_marginBottom="30dp"
        android:text="@string/profilo"
        app:layout_constraintBottom_toTopOf="@+id/buttonInc"
        app:layout_constraintEnd_toStartOf="@+id/buttonRic"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/buttonRic"
        android:layout_width="132dp"
        android:layout_height="149dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/teal_200"
        android:text="@string/richieste"
        app:layout_constraintBottom_toTopOf="@+id/buttonInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonPro" />

    <Button
        android:id="@+id/buttonInc"
        android:layout_width="132dp"
        android:layout_height="149dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/teal_700"
        android:text="@string/incarichi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonInfo"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/buttonInfo"
        android:layout_width="132dp"
        android:layout_height="149dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/purple_700"
        android:text="@string/info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonInc" />

    <TextView
        android:id="@+id/textMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/menu"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>